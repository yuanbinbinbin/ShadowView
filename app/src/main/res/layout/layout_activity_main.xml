<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <com.yb.shadowview.shadow.ShadowView
        android:id="@+id/id_layout_activity_shadow_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:shadowColor="#E6E6E6">

        <TextView
            android:id="@+id/id_layout_activity_shadow_inner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="内容区域"
            android:textColor="#000"
            android:textSize="17sp" />

    </com.yb.shadowview.shadow.ShadowView>
    <!--#E6E6E6-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_layout_activity_shadow_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#E6E6E6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="changeShadowColor"
            android:padding="10dp"
            android:text="确认" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_layout_activity_shadow_width_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shadowWidth:0px" />

    <SeekBar
        android:id="@+id/id_layout_activity_shadow_width"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:max="100"
        android:min="0" />

    <TextView
        android:id="@+id/id_layout_activity_shadow_radius_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shadowRadius:0px" />

    <SeekBar
        android:id="@+id/id_layout_activity_shadow_radius"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:max="100"
        android:min="0" />

    <TextView
        android:id="@+id/id_layout_activity_show_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showStroke"
        android:padding="5dp"
        android:text="显示边框" />
</LinearLayout>